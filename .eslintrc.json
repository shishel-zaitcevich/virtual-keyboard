{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "rules": {
    // windows linebreaks when not in production environment
    "linebreak-style": [
      "error",
      "unix"
    ]
  }
}